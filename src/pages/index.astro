---
export const prerender = true;

// Redirect bare root to /en/
if (Astro.url.pathname === '/') {
  return Astro.redirect('/ar/');
}
---

<!DOCTYPE html>
<html lang="ar">
  <head>
    <meta http-equiv="refresh" content="0;url=/ar/" />
    <title>Redirecting…</title>
  </head>
  <body>
    <p><a href="/ar/">/en/</a>…</p>
  </body>
</html>