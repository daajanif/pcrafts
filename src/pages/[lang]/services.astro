        { number: "٢", title: "التصميم والهندسة",  description: "يقوم فريق التصميم لدينا بإنشاء خطط ومواصفات مفصلة بينما يضمن مهندسونا السلامة الهيكلية والامتثال التنظيمي." },
        { number: "٣", title: "البناء",          description: "ننفذ المشروع بدقة، مع الالتزام بالجداول الزمنية ومعايير الجودة. يستخدم فريقنا تقنيات متقدمة ومواد ممتازة." },
        { number: "٤", title: "ضمان الجودة",     description: "طوال عملية البناء، نجري فحوصات جودة صارمة للتأكد من أن كل جانب يلبي معاييرنا الدقيقة وتوقعاتك." },
        { number: "٥", title: "الإكمال والتسليم", description: "نحن ننهي جميع التفاصيل، ونجري عمليات تفتيش شاملة، ونزودك بوثائق كاملة قبل تسليم المشروع بسلاسة." }
      ]
    },

    callToAction: {
      title: "هل أنت جاهز لبدء مشروع البناء الخاص بك؟",
      text: "اتصل بفريقنا اليوم للحصول على استشارة شاملة واكتشف كيف يمكننا تحويل رؤيتك إلى واقع بدقة وتميز.",
      buttonText: "اتصل بنا"
    }
  }
};

const t = translations[lang as keyof typeof translations] || translations.en;
---

<BaseLayout title={t.title} description={t.description} lang={lang}>
  <!-- NAVBAR -->
  <Navbar
    links={t.navLinks}
    lang={lang}
    ctaText={t.callToAction.buttonText}
  />

  <!-- HERO -->
  <MinimalHero
  stat={t.heroSubtitle}
  title={t.heroTitle}
  highlight=""
  text={t.heroText}
  buttons={[]}
  lang={lang}
/>



  <!-- SERVICES DETAIL SECTION -->
  <ServicesDetailSection
    categories={t.services.categories}
    featuresLabel={t.services.featuresLabel}
    lang={lang}
  />

  <!-- SERVICE PROCESS SECTION -->
  <ServiceProcessSection
    title={t.process.title}
    subtitle={t.process.subtitle}
    steps={t.process.steps}
    lang={lang}
  />


  <!-- CALL TO ACTION -->
  <CTASection
    title={t.callToAction.title}
    text={t.callToAction.text}
    buttonText={t.callToAction.buttonText}
    lang={lang}
  />
</BaseLayout>
