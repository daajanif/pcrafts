// TypeScript fix: Type assertion for language key
const t = translations[lang as keyof typeof translations] || translations.en;
const isRTL = lang === 'ar';

// Web3Forms API key
const formApiKey = "60c28312-cec3-46f4-b0a1-727de2b5ecb4";
---

<BaseLayout 
  title={t.title} 
  description={t.description} 
  lang={lang}
  navLinks={t.navLinks}
  ctaText={t.contactForm.submitButton}
>
  <!-- HERO -->
  <MinimalHero
    title={t.heroTitle}
    highlight=""
    text={t.heroText}
    stat={t.heroSubtitle}
    buttons={[]}
    bgColor="bg-gray-50"
    textAlign="center"
    lang={lang}
  />

  <!-- CONTACT SECTION -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Contact Form -->
        <div class={`bg-white rounded-lg shadow-lg p-8 ${isRTL ? 'order-2' : 'order-1'}`}>
          <h2 class={`text-2xl font-bold mb-6 ${isRTL ? 'text-right font-arabic' : ''}`}>{t.contactForm.title}</h2>
          
          <form id="contactForm" action="https://api.web3forms.com/submit" method="POST" class={`${isRTL ? 'text-right' : ''}`}>
            <!-- Hidden web3forms API key -->
            <input type="hidden" name="access_key" value={formApiKey}>
            <input type="hidden" name="subject" value="New contact submission from Precision Crafts website">
            <input type="hidden" name="from_name" value="Precision Crafts Website">
            <input type="checkbox" name="botcheck" class="hidden">
            
            <!-- Name field -->
            <div class="mb-4">
              <label for="name" class={`block mb-2 font-medium text-gray-700 ${isRTL ? 'font-arabic' : ''}`}>
                {t.contactForm.name}<span class="text-primary-500">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                class={`w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 ${isRTL ? 'text-right font-arabic' : ''}`}
                placeholder={t.contactForm.namePlaceholder}
                required
              />
            </div>
            
            <!-- Email field -->
            <div class="mb-4">
              <label for="email" class={`block mb-2 font-medium text-gray-700 ${isRTL ? 'font-arabic' : ''}`}>
                {t.contactForm.email}<span class="text-primary-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class={`w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 ${isRTL ? 'text-right font-arabic' : ''}`}
                placeholder={t.contactForm.emailPlaceholder}
                required
              />
            </div>
            
            <!-- Phone field -->
            <div class="mb-4">
              <label for="phone" class={`block mb-2 font-medium text-gray-700 ${isRTL ? 'font-arabic' : ''}`}>
                {t.contactForm.phone}
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class={`w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 ${isRTL ? 'text-right font-arabic' : ''}`}
                placeholder={t.contactForm.phonePlaceholder}
              />
            </div>
            
            <!-- Subject field -->
            <div class="mb-4">
              <label for="subject" class={`block mb-2 font-medium text-gray-700 ${isRTL ? 'font-arabic' : ''}`}>
                {t.contactForm.subject}<span class="text-primary-500">*</span>
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                class={`w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 ${isRTL ? 'text-right font-arabic' : ''}`}
                placeholder={t.contactForm.subjectPlaceholder}
                required
              />
            </div>
            
            <!-- Message field -->
            <div class="mb-6">
              <label for="message" class={`block mb-2 font-medium text-gray-700 ${isRTL ? 'font-arabic' : ''}`}>
                {t.contactForm.message}<span class="text-primary-500">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class={`w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 ${isRTL ? 'text-right font-arabic' : ''}`}
                placeholder={t.contactForm.messagePlaceholder}
                required
              ></textarea>
            </div>
            
            <!-- Web3Forms reCAPTCHA -->
            <div class="mb-6">
              <label class={`block mb-2 font-medium text-gray-700 ${isRTL ? 'font-arabic' : ''}`}>
                {t.contactForm.captchaLabel}<span class="text-primary-500">*</span>
              </label>
              <div class={`${isRTL ? 'flex justify-end' : ''}`}>
                <div class="h-captcha" data-sitekey="d1a38a5a-d07b-45a9-9bd9-c78b348d1e62"></div>
              </div>
            </div>

            <!-- Redirect URL after form submission -->
            <input type="hidden" name="redirect" value={`/${lang}/thank-you`}>
            
            <!-- Submission button -->
            <button
              type="submit"
              id="submitButton"
              class={`w-full bg-primary-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-primary-700 transition-colors ${isRTL ? 'font-arabic' : ''}`}
              data-original-text={t.contactForm.submitButton}
            >
              {t.contactForm.submitButton}
            </button>
            
            <!-- Status messages -->
            <div id="successMessage" class={`hidden mt-4 p-4 bg-green-100 text-green-700 rounded-lg ${isRTL ? 'text-right font-arabic' : ''}`}>
              {t.contactForm.successMessage}
            </div>
            <div id="errorMessage" class={`hidden mt-4 p-4 bg-red-100 text-red-700 rounded-lg ${isRTL ? 'text-right font-arabic' : ''}`}>
              {t.contactForm.errorMessage}
            </div>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class={`${isRTL ? 'order-1' : 'order-2'}`}>
          <div class="bg-gray-50 rounded-lg p-8 mb-8">
            <h2 class={`text-2xl font-bold mb-6 ${isRTL ? 'text-right font-arabic' : ''}`}>{t.contactInfo.title}</h2>
            <ul class="space-y-4">
              <!-- Address -->
              <li class={`flex ${isRTL ? 'flex-row-reverse text-right' : ''}`}>
                <div class={`flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center ${isRTL ? 'ml-4' : 'mr-4'}`}>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class={`text-gray-500 text-sm ${isRTL ? 'font-arabic' : ''}`}>{t.contactInfo.address.label}</p>
                  <p class={`text-gray-800 ${isRTL ? 'font-arabic' : ''}`}>{t.contactInfo.address.value}</p>
                </div>
              </li>
              
              <!-- Phone -->
              <li class={`flex ${isRTL ? 'flex-row-reverse text-right' : ''}`}>
                <div class={`flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center ${isRTL ? 'ml-4' : 'mr-4'}`}>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class={`text-gray-500 text-sm ${isRTL ? 'font-arabic' : ''}`}>{t.contactInfo.phone.label}</p>
                  <p class={`text-gray-800 ${isRTL ? 'font-arabic' : ''}`}>{t.contactInfo.phone.value}</p>
                </div>
              </li>
              
              <!-- Email -->
              <li class={`flex ${isRTL ? 'flex-row-reverse text-right' : ''}`}>
                <div class={`flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center ${isRTL ? 'ml-4' : 'mr-4'}`}>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class={`text-gray-500 text-sm ${isRTL ? 'font-arabic' : ''}`}>{t.contactInfo.email.label}</p>
                  <p class={`text-gray-800 ${isRTL ? 'font-arabic' : ''}`}>{t.contactInfo.email.value}</p>
                </div>
              </li>
              
              <!-- Business Hours -->
              <li class={`flex ${isRTL ? 'flex-row-reverse text-right' : ''}`}>
                <div class={`flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center ${isRTL ? 'ml-4' : 'mr-4'}`}>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <p class={`text-gray-500 text-sm ${isRTL ? 'font-arabic' : ''}`}>{t.contactInfo.hours.label}</p>
                  <p class={`text-gray-800 ${isRTL ? 'font-arabic' : ''}`}>{t.contactInfo.hours.value}</p>
                </div>
              </li>
            </ul>
          </div>
          
          <!-- Map -->
          <div class="h-64 rounded-lg overflow-hidden shadow">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14344.374077001868!2d50.19267893589237!3d26.30297504248691!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e49e8a9440aaaab%3A0x36e56cc1b558080!2sPrince%20Turki%20St%2C%20Al%20Khobar%20Saudi%20Arabia!5e0!3m2!1sen!2sus!4v1683030354600!5m2!1sen!2sus" 
              width="100%" 
              height="100%" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- FAQ SECTION -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class={`text-3xl font-bold mb-8 text-center ${isRTL ? 'font-arabic' : ''}`}>{t.faq.title}</h2>
      
      <div class="max-w-3xl mx-auto">
        <div class="space-y-4">
          {t.faq.items.map((item, index) => (
            <div class="border border-gray-200 rounded-lg overflow-hidden">
              <button 
                class={`w-full flex justify-between items-center p-4 text-left bg-white hover:bg-gray-50 ${isRTL ? 'text-right font-arabic' : ''}`}
                id={`faq-button-${index}`}
                aria-expanded="false"
                aria-controls={`faq-content-${index}`}
                type="button"
              >
                <span class="font-medium">{item.question}</span>
                <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div 
                class="hidden px-4 pb-4 pt-0 bg-white"
                id={`faq-content-${index}`}
              >
                <p class={`text-gray-600 ${isRTL ? '!text-right font-arabic' : ''}`}>{item.answer}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Form submission handler
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm') as HTMLFormElement | null;
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');
    const submitButton = document.getElementById('submitButton') as HTMLButtonElement | null;
    
    // Load hCaptcha script
    const hcaptchaScript = document.createElement('script');
    hcaptchaScript.src = 'https://js.hcaptcha.com/1/api.js';
    hcaptchaScript.async = true;
    hcaptchaScript.defer = true;
    document.head.appendChild(hcaptchaScript);
    
    if (form) {
      // Store original button text
      if (submitButton) {
        const originalText = submitButton.textContent;
        submitButton.setAttribute('data-original-text', originalText || '');
      }
      
      form.addEventListener('submit', function(e) {
        // Check if hCaptcha is completed
        const hcaptchaResponse = document.querySelector('[name="h-captcha-response"]') as HTMLInputElement;
        if (!hcaptchaResponse || hcaptchaResponse.value === '') {
          e.preventDefault();
          if (errorMessage) {
            errorMessage.textContent = "Please complete the security check";
            errorMessage.classList.remove('hidden');
            setTimeout(() => {
              errorMessage.classList.add('hidden');
            }, 3000);
          }
          return false;
        }
        
        // Show loading state on button
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.innerHTML = '<svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Sending...';
        }
        
        // Let the form submit normally
      });
    }
    
    // FAQ accordion functionality
    const faqButtons = document.querySelectorAll('[id^="faq-button-"]');
    
    faqButtons.forEach(button => {
      button.addEventListener('click', () => {
        const expanded = button.getAttribute('aria-expanded') === 'true';
        const contentId = button.getAttribute('aria-controls');
        if (!contentId) return;
        
        const content = document.getElementById(contentId);
        if (!content) return;
        
        // Toggle this FAQ item
        button.setAttribute('aria-expanded', (!expanded).toString());
        content.classList.toggle('hidden');
        
        // Update icon
        const svg = button.querySelector('svg');
        if (svg) {
          if (expanded) {
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />';
          } else {
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />';
          }
        }
      });
    });
  });
</script>