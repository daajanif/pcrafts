---
interface ValueItem {
  title: string;
  description: string;
  icon: string;
}
const { title, subtitle, items } = Astro.props as {
  title: string;
  subtitle: string;
  items: ValueItem[];
};

// Flowbite SVG icon mapping - you would replace these with actual Flowbite icons
