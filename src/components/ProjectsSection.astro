---
interface Project { title: string; category: string; image: string; link: string }
const { title, viewAllText, items, lang } = Astro.props as {
  title: string
  viewAllText: string
  items: Project[]
  lang: string
}
---
<section class="py-20 bg-gray-50">
  <div class="container mx-auto flex justify-between items-center mb-8 px-4">
    <h2 class="text-3xl font-bold">{title}</h2>
    <a
      href={`/${lang}/projects`}
      class="text-primary-600 hover:underline flex items-center"
    >
      {viewAllText}
      <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20"><path d="M12.293 5.293â€¦"></path></svg>
    </a>
  </div>
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 px-4">
    {items.map(p => (
      <a href={p.link} class="block overflow-hidden rounded-lg relative group">
        <img
          src={p.image}
          alt={p.title}
          class="w-full h-64 object-cover group-hover:scale-105 transition"
          loading="lazy"
        />
        <div class="absolute bottom-0 bg-gradient-to-t from-black/70 to-transparent w-full p-4 text-white">
          <div class="text-sm">{p.category}</div>
          <h3 class="text-lg font-bold">{p.title}</h3>
        </div>
      </a>
    ))}
  </div>
</section>
