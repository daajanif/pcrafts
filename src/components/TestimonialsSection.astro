---
interface Testimonial {
  quote: string;
  author: string;
  company: string;
}
const { title, items } = Astro.props as {
  title: string;
  items: Testimonial[];
};
---

<section class="py-20">
  <div class="container mx-auto text-center mb-12 px-4">
    <h2 class="text-4xl font-bold text-gray-900 mb-4">{title}</h2>
  </div>
  
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {items.map(item => (
        <div class="flowbite-card">
          <figure class="max-w-full p-6 bg-white border border-gray-200 rounded-lg shadow">
            <!-- Quote SVG -->
            <svg class="h-10 w-10 text-gray-400 mb-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 14">
              <path d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"/>
            </svg>
            
            <blockquote>
              <p class="text-lg font-medium text-gray-700">{item.quote}</p>
            </blockquote>
            <figcaption class="flex items-center mt-6 space-x-3 rtl:space-x-reverse">
              <div class="flex items-center divide-x-2 rtl:divide-x-reverse divide-gray-300">
                <cite class="pe-3 font-medium text-gray-900">{item.author}</cite>
                <cite class="ps-3 text-sm text-gray-500">{item.company}</cite>
              </div>
            </figcaption>
          </figure>
        </div>
      ))}
    </div>
  </div>
</section>