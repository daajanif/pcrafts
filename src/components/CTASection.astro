---
const { title, text, buttonText, lang } = Astro.props as {
  title: string
  text: string
  buttonText: string
  lang: string
}
---
<section class="py-20 bg-primary-600 text-white text-center px-4">
  <div class="container mx-auto !text-center">
    <h4 class="text-3xl font-bold !text-center">{title}</h2>
    </br>

    <p2 class="mt-4 max-w-2xl mx-auto !text-center">{text}</p2>
    </br>
    <a
      href={`/${lang}/contact`}
      class="mt-8 inline-block bg-white text-primary-600 px-8 py-3 rounded font-semibold hover:bg-gray-100 transition"
    >
      {buttonText}
    </a>
  </div>
</section>
