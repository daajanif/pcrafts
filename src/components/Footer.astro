---
export interface NavLink { name: string; url: string }
const { description, address, phone, email, navLinks } = Astro.props as {
  description: string
  address: string
  phone: string
  email: string
  navLinks: NavLink[]
}
---
<footer class="bg-gray-900 text-gray-300 py-12 px-4">
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
    <div>
      <img src="/images/logo-dark.svg" alt="Precision Crafts" class="h-20 mb-30" />
      <p>{description}</p>
    </div>
    <div>
      <h3 class="font-semibold mb-4">Contact</h3>
      <p>{address}</p>
      <p class="mt-2">{phone}</p>
      <p class="mt-2">{email}</p>
    </div>
    <div>
      <h3 class="font-semibold mb-4">Quick Links</h3>
      <ul class="space-y-2">
        {navLinks.map(l => (
          <li><a href={l.url} class="hover:text-white">{l.name}</a></li>
        ))}
      </ul>
    </div>
  </div>
  <div class="mt-12 text-center text-gray-500 text-sm">
    Â© 2025 Precision Crafts. All rights reserved.
  </div>
</footer>
